{
  "compilerOptions": {
    "rootDir": "./",
    "target": "es2018",
    "module": "esnext",
    "outDir": "./dist",
    "declaration": true,
    "noEmitOnError": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./src"]
}
